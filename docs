// install chocolatey for package-manager SEE STEP BY STEP FROM DOCS.
https://chocolatey.org/install


//init project
npm init -y

//install express
npm install express

// add server.js (main file)

//START PROJECT
npm server.js

//add nodemon (live reload) -D means "dev"
npm install -D nodemon

// START PROJECT AFTER NODEMON
npm run dev


// download mongodb via docker
docker pull mongo

// run docker mongodb
docker run --name mongodbnodeinit -p 27017:27017 -d mongo

// connect to database
npm install mongoose

// REQUIRE ALL DIRECTORY DEPENDENCY
npm install require-dir

